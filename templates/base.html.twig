{% set actual_route = app.request.attributes.get('_route')  %}
<!DOCTYPE html>
<html>
	<head>
		<title>Association Sportive St-Vincent</title>
		<meta name="viewport" content="width=device-width,
		 initial-scale=1">	
		<link href="https://fonts.googleapis.com
		/css?family=Open+Sans&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
		<script src="https://kit.fontawesome.com/b33430525b.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" type="text/css"
		 href="{{asset('static/css/styleprojet.css')}}">
		{% block stylesheets %}{% endblock %}
	</head>
	<body data-spy="scroll" data-target=".navbar" data-offset="80">
		<nav class="navbar">
			<div class="container-fluid">
			    <div class="navbar-header">
			      <img src="{{asset('/static/Images/StVincent.png')}}">
			    </div>
			    <ul class="nav navbar-nav">
			      	<li>
			      		<a href="{{ path('homepage') }}">ACCUEIL</a>
			      	</li>
			      	<li>
			      		<a href="{{ path
			      		('evenement_index') }}">EVENEMENTS</a>
			      	</li>
			    </ul>
			    <ul class="nav navbar-nav navbar-right" id="connexion">
			    	<li>
			      		{% if is_granted('IS_AUTHENTICATED_REMEMBERED')%}
			      			{% if is_granted('ROLE_ADMIN')%}
					      		<a href="{{ path('profile_admin') }}">
					      			<i class="fas fa-user-circle"></i>
					      		</a>
					      	{% elseif is_granted('ROLE_ELEVE')%}
					      		<a href="{{ path('profile_eleve') }}">
					      			<i class="fas fa-user-circle"></i>
					      		</a>
					      	{% elseif is_granted('ROLE_ENSEIGNANT')%}
					      		<a href="{{ path('profile_enseignant') }}">
					      			<i class="fas fa-user-circle"></i>
					      		</a>
							{% elseif is_granted('ROLE_COMPTABLE')%}
					      		<a href="{{ path('profile_tiers') }}">
					      			<i class="fas fa-user-circle"></i>
					      		</a>
					      	{% endif %}
			      		{% else %}
			      			<a href="{{ path('app_login') }}">
			      				<i class="fas fa-user-circle"></i> 
			      			</a>
			      		{% endif %}
			      		{% if is_granted('IS_AUTHENTICATED_REMEMBERED')%}
			      			<a href="{{ path('app_logout') }}">
			      				Se déconnecter 
			      			</a>
			      		{% else %}
			      			<a href="{{ path('app_login') }}">
			      				Se connecter 
			      			</a>
			      		{% endif %}
			      	</li>
			    </ul>
		  	</div>
		</nav>
		{% block body %}{% endblock %}
	</body>
		<footer>
			<div class="coordonnees">
				<h3>Association Sportive Saint Vincent</h3>
				<li>
					<p>36 Rue de Meaux</p>
					<p>60300 Senlis</p>
				</li>
				<h3>Association Saint-Vincent</h3>
				<p> <a href="https://www.lycee-stvincent.fr/" target="_blank">https://www.lycee.stvincent.fr/</a></p>
			</div>

			<div class="contact">
				<h3>Nous contacter</h3>
				<li>
					<p>Tel : 09 66 85 64 98</p>
					<p>Fax : 04 28 73 25 64</p>
					<p>Email : <a href="mailto:assocstvincent@gmail.com">
					assocstvincent@gmail.com</a></p>
					<p>Web : <a href="https://www.lycee-stvincent.fr/" target="_blank">https://www.lycee.stvincent.fr/</a></p>
				</li>
			</div>

			<div class="access">
				<h3>Accès rapide</h3>
				<li>
					<p><a href="{{path('homepage')}}">Accueil</a></p>
					<p>Actualités</p>
					<p><a href="{{path('evenement_index')}}">Evénements</a></p>
					<p><a href="{{path('document_index')}}">Documents</a></p>
				</li>
			</div>

			<div class="networks">
				<h3>Suivez-nous</h3>
				<a href="https://twitter.com/?lang=en">
				<i class="fab fa-twitter-square"></i></a>
				<a href="https://www.facebook.com/">
				<i class="fab fa-facebook-square"></i></a>
			</div>
		{% block footer %}{% endblock %}	
	</footer>
</html>
