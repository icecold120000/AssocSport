<form method="post" action="{{ path('budget_delete', {'id': budget.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce budget?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ budget.id) }}">
    <button class="btn btn-danger" id="btnSuppr">Supprimer</button>
</form>
