{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    <div>
        <p>Inscrivez vous maintenant dés maintenant pour vous connecter</p>
    </div>

    <div class="container-fluid">
        <form id="formRegister" action="{{ path('app_register') }} method="POST">
            <div>
                <label class="labels" id="regisLogin">Login</label>
                <div>
                    <input type="text" name=
                    "login" class="form-control">
                </div>
                <label class="labels" id="regisEmail">Email</label>
                <div>
                    <input type="email" name=
                    "email" class="form-control">
                </div>
                <label class="labels" id="regisMdp">
                Mot de passe</label>
                <div>
                    <input type="password" name=
                    "password" class="form-control">
                </div>
                <label class="labels" id="regisTerm">
                    Accepter les conditions
                </label>
                <div>
                    <input type="checkbox" name="condition"
                     class="checkbox" id="check">
                </div>
                <div id="divAjout">
                    <button type="submit" class="btn btn-success"
                     >S'inscrire</button>
                    <p>Vous avez déjà un compte ? 
                    <a href="{{path('app_login')}}" id="links">Connectez-vous.</a></p>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
