{% extends 'base.html.twig' %}

{% block title %}Modifier une catégorie d'élève{% endblock %}

{% block body %}
    <h1>Modifier une catégorie d'élève</h1>

    <div class="container-fluid">
        <form id="formCategEleve" method="POST" action="{{
         path('categorie_eleve_edit',{'id': categorie_eleve.id}) }}">
            {{ include('categorie_eleve/_form.html.twig') }}
            <div id="divAjout" class="form-actions">
                <input type="submit" value="Modifier votre
                 catégorie d'élève" class="btn btn-success">     
            </div>
        </form>
    </div>

    <a href="{{ path('categorie_eleve_index') }}">
    	<button class="btn btn-default" id="btnRetour">
            Revenir dans la liste
        </button>
    </a>
    
{% endblock %}