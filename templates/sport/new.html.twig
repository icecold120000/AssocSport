{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau sport{% endblock %}

{% block body %}
    <h1>Ajouter un nouveau sport</h1>

    <div class="container-fluid">
        <form id="formSport" method="POST" action="{{path('sport_new')}}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce sport ?');">
            {{ include('sport/_form.html.twig') }}
            <div id="divAjout" class="form-actions">
                <input type="submit" value="Ajouter
                 votre sport" class="btn btn-success">
            </div>
        </form>
    </div>

    {{dump()}}

    <a href="{{ path('sport_index') }}">
    	<button class="btn btn-default" id="btnRetour">
        Revenir dans la liste </button>
   </a>
    
{% endblock %}