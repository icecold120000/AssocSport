{% extends 'base.html.twig' %}

{% block title %}Modifier un type d'événement{% endblock %}

{% block body %}
    <h1>Modifier un type d'événement</h1>

    <div class="container-fluid">
        <form id="formType" method="POST" action="{{
         path('type_evenement_edit', {'id': type_evenement.id}) }}">
            {{ include('type_evenement/_form.html.twig') }}
            <div id="divAjout" class="form-actions">
                <input type="submit" value="Modifier 
                votre type d'évenement" class="btn btn-success">
            </div>
        </form>
    </div>

    <a href="{{ path('type_evenement_index') }}">
    	<button class="btn btn-default" id="btnRetour">
            Revenir dans la liste
        </button>
    </a>
    
{% endblock %}

