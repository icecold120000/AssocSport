{% extends 'base.html.twig' %}

{% block title %}{{actualite.NomActu}}{% endblock %}

{% block body %}
    <h1>{{actualite.NomActu}}</h1>

    <h2>{{ actualite.dateActu ? actualite.dateActu|date('d-m-Y H:i') : '' }}</h2>

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        {% for file in actualite.photoActu %}
            <div class="carousel-item active">
                <img src="{{ asset('uploads/actuPhotos/' ~ file.imgPhotoActu) }}" class="d-block w-40" alt="Slide 1"
              width="200">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('uploads/actuPhotos/' ~ file.imgPhotoActu) }}" class="d-block w-40" alt="Slide {{loop.index}}" width="200">
            </div>
        {% endfor %}
      </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <p>{{ actualite.descripActu }}</p>

    <div id="divRetour">
        <a href="{{ path('admin_index') }}">
            <button class="btn btn-secondary" id="btnRetour">
                Retourner dans la liste de fonctionnalit√©
            </button>
        </a>
    </div>

{% endblock %}
