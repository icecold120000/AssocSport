{% extends 'base.html.twig' %}

{% block title %}Eleve index{% endblock %}

{% block body %}
    <h1>Eleve index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEleve</th>
                <th>PrenomEleve</th>
                <th>DateNaissance</th>
                <th>GenreEleve</th>
                <th>DateCreation</th>
                <th>DateMaj</th>
                <th>ArchiveEleve</th>
                <th>NumTelEleve</th>
                <th>NumTelParent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for eleve in eleves %}
            <tr>
                <td>{{ eleve.id }}</td>
                <td>{{ eleve.nomEleve }}</td>
                <td>{{ eleve.prenomEleve }}</td>
                <td>{{ eleve.dateNaissance }}</td>
                <td>{{ eleve.genreEleve }}</td>
                <td>{{ eleve.dateCreation ? eleve.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.dateMaj ? eleve.dateMaj|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.archiveEleve }}</td>
                <td>{{ eleve.numTelEleve }}</td>
                <td>{{ eleve.numTelParent }}</td>
                <td>
                    <a href="{{ path('eleve_show', {'id': eleve.id}) }}">show</a>
                    <a href="{{ path('eleve_edit', {'id': eleve.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('eleve_new') }}">Create new</a>
{% endblock %}
