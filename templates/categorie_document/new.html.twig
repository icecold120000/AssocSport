{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle catégorie de document{% endblock %}

{% block body %}
    <h1>Ajouter une nouvelle catégorie de document</h1>

    <div class="container-fluid">
        <form id="formCategDoc" method="POST" action="{{path('categorie_document_new')}}">
            {{ include('categorie_document/_form.html.twig') }}
            <div id="divAjout" class="form-actions">
                <input type="submit" value="Ajouter votre catégorie
                 de document" class="btn btn-success" >
            </div>
        </form>
    </div>

    <a href="{{ path('categorie_document_index') }}">
    	<button class="btn btn-default" id="btnRetour">
            Revenir dans la liste
        </button> 
    </a>
    
{% endblock %}