{% extends 'base.html.twig' %}

{% block title %}Liste de catégories de document{% endblock %}

{% block body %}
    <h1>Liste de catégories de document</h1>
    <button class="btn btn-primary" id="btnAjout">
        <a href="{{ path('categorie_document_new') }}"> 
            Ajouter une nouvelle catégorie de document
        </a>
     </button>    
    <table class="table tableAdmin">
        <thead>
            <tr>
                <th scope="col">Libellé de la catégorie de document</th>
                <th scope="col">Editer</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td scope="row">{{ document.libelleCategorieDoc }}</td>
                <td>
                    <a href="{{ path('categorie_document_edit',
                    {'id': document.id}) }}">
                        <button class="btn btn-primary">
                            <i class="far fa-edit"></i>
                        </button>
                    </a>
                </td>
                <td>
                    <a href="{{ path('categorie_document_delete',
                     {'id': document.id}) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="erreur">Aucune donnée n'a été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}

