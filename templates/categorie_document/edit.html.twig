{% extends 'base.html.twig' %}

{% block title %}Modifier une catégorie de document{% endblock %}

{% block body %}
    <h1>Modifier une catégorie de document</h1>

    <div class="container-fluid">
        <form id="formCategDoc" method="POST" action="{{
         path('categorie_document_edit',{'id': categorie.id}) }}>
            {{ include('categorie_document/_form.html.twig') }}
